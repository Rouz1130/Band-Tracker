<p>Add or Delete to you List</p>
<br>
<h2 class="venues">List of Bands:</h2>
<br>
<br>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var band in Model)
    {
      <li><a href='/bands/@band.GetId()'>@band.GetName()</a></li>
    }
  </ul>
  <br>
  <br>
  <form action="/bands/delete" method="post">
    <button type="submit">Clear All</button>
  </form>
}
